{
  // Top Level
  "include": [".next/types/**/*.ts", "**/*.ts", "**/*.tsx", "next-env.d.ts"],
  "exclude": ["node_modules"],

  "compilerOptions": {
    // Type Checking
    "skipLibCheck": true,

    // Modules
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": { "@/*": ["./src/*"] },
    "resolveJsonModule": true,

    // Emit
    "noEmit": true,

    // JavaScript Support
    "allowJs": true,

    // Editor Support
    "plugins": [{ "name": "next" }],

    // Interop Constraints
    "esModuleInterop": true,
    "isolatedModules": true,

    // Language and Environment
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ES2017",

    // Projects
    "incremental": true,

    // Completeness
    "strict": true
  }
}
